{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "checkJs": true,
    "paths": {
      "*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
